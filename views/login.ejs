<%- include segment/header %>
<div class="container text-center">

    <form method="post" class="col-md-4 col-md-offset-4">
      <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="Enter your epic username" required/>
      </div>

      <div class="form-group">
        <input class="form-control" type="password" name="password" placeholder="Enter your secret password" required/>
      </div>

