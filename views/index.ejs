<%- include segment/header %>
<% posts.forEach(function (post, index) { %>
  <div class="container">

    <p><h1><a href="/p/<%= post._id %>"><%= post.title %></a></h2></p>
    <p class="info">
      Author: <a href="/u/<%= post.name %>"><%= post.name %></a>
      Date: <%= post.time.minute %>
    </p>


    <p class="body"><%- post.post %></p>
    <hr>

  </div>

<% }) %>
<%- include segment/page %>
<%- include segment/footer %>
